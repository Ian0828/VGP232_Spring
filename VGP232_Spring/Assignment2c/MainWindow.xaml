        Title="Weapon Editor" Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Button Click="LoadClicked" Content="Load" HorizontalAlignment="Center" VerticalAlignment="Center" Height="22" Width="60"/>
        <Button Click="AddClicked" Content="Add" HorizontalAlignment="Center" VerticalAlignment="Top" Height="22" Width="60" Grid.Column="4" Grid.Row="4" Margin="0,38,0,0" Grid.RowSpan="2"/>
        <Button Click="EditClicked" Content="Edit" HorizontalAlignment="Center" VerticalAlignment="Top" Height="22" Width="60" Grid.Column="4" Margin="0,32,0,0" Grid.Row="5" Grid.RowSpan="2"/>
        <Button Click="RemoveClicked" Content="Remove" HorizontalAlignment="Center" VerticalAlignment="Top" Height="22" Width="60" Grid.Column="4" Grid.Row="6" Margin="0,27,0,0"/>
        <Button Click="SaveClicked" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Center" Height="22" Width="60" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,0,0,0" Grid.Row="1" Text="Sort by: " TextWrapping="Wrap" VerticalAlignment="Center"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,14,0,0" Grid.Row="3" Text="Show only type " TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="87"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,2,0,0" Grid.Row="4" Text="Filter by name: " TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="87"/>
        <RadioButton Click="SortByName" Content="Name" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="54" Margin="10,0,0,0"/>
        <RadioButton Click="SortByBaseAttack" Content="BaseAttack" Grid.Column="2" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Width="80"/>
        <RadioButton Click="SortByRarity" Content="Rarity" Grid.Column="3" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center" Width="54" Margin="10,0,0,0"/>
        <RadioButton Click="SortByPassive" Content="Passive" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Width="60"/>
        <RadioButton Click="SortBySecondaryStat" Content="SecondaryStat" Grid.Column="2" HorizontalAlignment="Left" Grid.Row="2" VerticalAlignment="Center"  Width="94" Grid.ColumnSpan="2"/>
        <ListBox Name="lbFilterByName" Grid.Column="1" Grid.Row="4" Margin="34,8,20,32" Grid.ColumnSpan="3"/>
        <ComboBox Name="cbTypes" Grid.ColumnSpan="3" Margin="34,20,20,20" Grid.Row="3" Grid.Column="1"/>
        <ListBox Name="lbWeapons" Grid.Row="4" Grid.ColumnSpan="4" Margin="22,38,20,36" Grid.RowSpan="5"/>
