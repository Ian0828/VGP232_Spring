<Window x:Class="Assignment4.SelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment4"
        mc:Ignorable="d"
        Title="Selection Window" Height="250" Width="400">
    <Grid>
    <Grid.RowDefinitions>
        <RowDefinition Height="3*"/>
        <RowDefinition Height="3*"/>
        <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="3*"/>
        <ColumnDefinition Width="3*"/>
        <ColumnDefinition Width="3*"/>
    </Grid.ColumnDefinitions>
    <Button Click="NextClicked" Content="Next" Grid.Column="2" Grid.Row="2" Height="30" Width="85"/>
    <TextBlock FontSize="15" HorizontalAlignment="Left" Margin="27,39,0,0" Text="Select an cryptographic algorithm" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="286"/>
    <RadioButton Name="AES" Content="AES" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="1" VerticalAlignment="Top"/>
    <RadioButton Name="RSA" Content="RSA" HorizontalAlignment="Left" Margin="27,27,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1"/>

</Grid>
</Window>
