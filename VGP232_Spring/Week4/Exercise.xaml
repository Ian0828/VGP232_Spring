<Window x:Class="Week4.Exercise"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Week4"
        mc:Ignorable="d"
        Title="Exercise" Height="450" Width="800">
    <StackPanel>
        <TextBlock x:Name="tbHelloMessage" Margin="50" HorizontalAlignment="Center">Welcom to Exercise 1</TextBlock>
        <TextBlock Margin="20 0 20 0">Enter your name:</TextBlock>
        <TextBox x:Name="tBoxUserName" Margin="20 10 20 20"></TextBox>
        <Button Width="100" Click="SayHelloPressed">Say Hello</Button>
        <Button Width="100" Margin="0 10 0 0" Click="IncrementCountPressed">Count</Button>
        <TextBlock Name="tbCounter" Margin="30" HorizontalAlignment="Center">Count: 0</TextBlock>

    </StackPanel>
</Window>
